---
# clang-tidy configuration for vitals monitoring system
# Focuses on safety, readability, and best practices for C code

Checks: >
  clang-analyzer-*,
  bugprone-*,
  cert-*,
  cppcoreguidelines-*,
  hicpp-*,
  misc-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  security-*,
  -modernize-use-trailing-return-type,
  -cppcoreguidelines-avoid-magic-numbers,
  -readability-magic-numbers,
  -hicpp-signed-bitwise,
  -cert-err34-c

WarningsAsErrors: ''

HeaderFilterRegex: '.*'

AnalyzeTemporaryDtors: false

FormatStyle: 'file'

CheckOptions:
  - { key: readability-identifier-naming.VariableCase,           value: snake_case }
  - { key: readability-identifier-naming.FunctionCase,          value: snake_case }
  - { key: readability-identifier-naming.MacroCase,             value: UPPER_CASE }
  - { key: readability-identifier-naming.EnumCase,              value: CamelCase }
  - { key: readability-identifier-naming.StructCase,            value: CamelCase }
  - { key: readability-identifier-naming.ConstantCase,          value: UPPER_CASE }
  - { key: readability-function-size.LineThreshold,             value: 50 }
  - { key: readability-function-size.StatementThreshold,        value: 25 }
  - { key: misc-non-private-member-variables-in-classes.IgnoreClassesWithAllMemberVariablesBeingPublic, value: true }
  - { key: bugprone-easily-swappable-parameters.MinimumLength, value: 3 }
  - { key: bugprone-sizeof-expression.WarnOnSizeOfConstant,     value: true }
  - { key: cert-str34-c.DiagnoseSignedUnsignedCharComparisons, value: true }
  - { key: performance-move-const-arg.CheckTriviallyCopyableMove, value: false }